{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016"
    ],
    "module": "commonjs",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "node_modules/@types/**/*"
  ]
}